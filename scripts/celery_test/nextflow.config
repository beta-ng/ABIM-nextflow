aws {
    client {
        endpoint = 'http://abim-minio.abim.svc.cluster.local:9000'
        s3PathStyleAccess = true
    }
}

profiles {
    k8s {
        process.executor = 'k8s'
        
        process.container = 'ubuntu:22.04'
        
        k8s.namespace = 'abim'

        process.pod = [
            [ label: 'run_id', value: params.run_id ?: System.getenv('RUN_ID') ]
        ]

    }

    local {
        process.executor = 'local'
    }
}
